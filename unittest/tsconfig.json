{
    "compilerOptions": {
	"skipLibCheck": true,
        "downlevelIteration": true,
        "target": "es5",
        "module": "commonjs",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "lib": ["es6", "dom", "es2015.iterable", "es2017.object"],
        "baseUrl": ".",
        "paths": {
            "@nota/nativescript-webview-ext/*": ["../src/*"],
            "~/*": ["app/*"]
        }
    },
    "exclude": ["node_modules", "platforms"]
}
