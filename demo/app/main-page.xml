<Page
  xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" class="page"
  xmlns:ui="@nota/nativescript-webview-ext">
  <GridLayout class="p-2" rows="auto, *" columns="*">
    <Button id="test_button" row="0" text="Run Tests" tap="runTests" class="btn btn-primary"></Button>
    <ui:WebViewExt row="1" loaded="webviewLoaded" debugMode="true" viewPortSize="initial-scale=1.2" enterFullscreen="enterFullscreen" exitFullscreen="exitFullscreen"></ui:WebViewExt>
  </GridLayout>
</Page>
