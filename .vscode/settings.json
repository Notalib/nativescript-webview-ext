{
  "[typescript]": {
    "editor.formatOnSave": true,
    "files.trimTrailingWhitespace": true
  },
  "[javascript]": {
    "editor.formatOnSave": true,
    "files.trimTrailingWhitespace": true
  },
  "[css]": {
    "editor.formatOnSave": true,
    "files.trimTrailingWhitespace": true
  },
  "[scss]": {
    "editor.formatOnSave": true,
    "files.trimTrailingWhitespace": true
  },
  "[html]": {
    "editor.formatOnSave": true,
    "files.trimTrailingWhitespace": true
  },
  "files.watcherExclude": {
    "{demo,unittest}/platforms": true,
    "{demo,unittest}/platforms/**/*": true,
    ".git/objects/**": true,
    ".git/subtree-cache/**": true,
    "{demo,unittest,www-src,src}/node_modules/**/*": true,
    "{demo,unittest,www-src,src}/node_modules": true,
    "**/*.d.ts": {
      "when": "$(basename).ts"
    },
    "**/*.js": {
      "when": "$(basename).ts"
    }
  },
  "search.exclude": {
    "{demo,unittest}/platforms": true,
    "{demo,unittest}/platforms/**/*": true,
    "{demo,unittest,www-src,src}/node_modules/**/*": true,
    "{demo,unittest,www-src,src}/node_modules": true
  },
  "files.exclude": {
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.svn": true,
    "**/*.d.ts": {
      "when": "$(basename).ts"
    },
    "**/*.js": {
      "when": "$(basename).ts"
    },
    "**/*.metadata.json": true,
    "{demo,unittest,www-src,src}/node_modules": true,
    "{demo,unittest,www-src,src}/node_modules/**/*": true,
    "{demo,unittest}/platforms": true,
    "{demo,unittest}/platforms/**/*": true
  },
  "cSpell.words": [
    "Freiling",
    "Morten",
    "NSURL",
    "OUTDIR",
    "Overide",
    "Polyfill",
    "Polyfills",
    "Sj√∏gren",
    "WKUI",
    "WKURL",
    "bootstrapper",
    "endregion",
    "filepath",
    "filewalker",
    "mabs",
    "null'ing",
    "opentype",
    "prettierrc",
    "readonly",
    "stringify",
    "stringify'able",
    "toplevel",
    "tscwatch",
    "uglifyjs",
    "uiwebview",
    "unregister",
    "webview",
    "webview's",
    "webviewinterface",
    "webviews",
    "wkwebview",
    "xhtm"
  ],
}
